<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<h1><%= title %></h1>

<!-- Form thêm xe -->
<form action="/add" method="POST">
  <h2>Add a New Car</h2>
  <input type="text" name="name" placeholder="Tên xe" required>
  <input type="text" name="manufacturer" placeholder="Hãng sản xuất" required>
  <input type="number" name="year" placeholder="Năm sản xuất" required>
  <input type="number" name="price" placeholder="Giá bán" required>
  <textarea name="description" placeholder="Description"></textarea>
  <button type="submit">Thêm xe</button>
</form>

<!-- Hiển thị danh sách xe -->
<h2>Danh Sách xe</h2>
<table>
  <thead>
  <thead>
  <tr>
    <th>Tên</th>
    <th>Hãng</th>
    <th>Năm</th>
    <th>Giá bán</th>
    <th>Mô tả</th>
    <th>Hành Động</th>
  </tr>
  </thead>
  <tbody>
  <% cars.forEach(car => { %>
    <tr>
      <td><%= car.name %></td>
      <td><%= car.manufacturer %></td>
      <td><%= car.year %></td>
      <td>$<%= car.price %></td>
      <td><%= car.description %></td>
      <td class="actions">
        <form action="/edit/<%= car._id %>" method="GET">
          <button>Edit</button>
        </form>
        <form action="/delete/<%= car._id %>" method="POST">
          <button class="delete">Delete</button>
        </form>
      </td>
    </tr>
  <% }); %>
  </tbody>
</table>
</body>
</html>
